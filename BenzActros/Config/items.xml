<configs>
	<append xpath="/items">

		<item name="Benz Actros Trailer">
			<property name="Extends" value="vehicleBicycleHandlebars"/>
			<property name="CustomIcon" value="RemolqueIcono" />
			<property name="SellableToTrader" value="True"/>
			<property name="DescriptionKey" value="Benz Actros Trailer"/>
			<property name="EconomicValue" value="9000"/>
			<property name="UnlockedBy" value="craftingVehicles"/>
		</item>

		<item name="Benz Actros Body">
			<property name="Extends" value="vehicleBicycleHandlebars"/>
			<property name="CustomIcon" value="CamionBody" />
			<property name="SellableToTrader" value="True"/>
			<property name="DescriptionKey" value="Benz Actros Body"/>
			<property name="EconomicValue" value="9000"/>
			<property name="UnlockedBy" value="craftingVehicles"/>
		</item>
		
		<item name="vehicleBenzActrosTrailerplaceable">
			<property name="Extends" value="vehicleMinibikePlaceable"/>
			<property name="CustomIcon" value="CamionIcono" />
			<property name="Tags" value="vehicle,vengine,vfuel,vlight,canHaveCosmetic"/>
			<property name="Meshfile" value="#@modfolder:Resources/CamionRemolque.unity3d?Actros"/>
			<property name="EconomicValue" value="35000"/>
			<property class="Action1">
				<property name="Vehicle" value="vehicleBenzActrosTrailer"/>
				<property name="VehicleSize" value="4.7, 4.8, 5"/>
			</property>
			<effect_group name="Base Effects">
				<passive_effect name="ModSlots" operation="base_set" value="4"/>
				<passive_effect name="ModPowerBonus" operation="base_add" value="300" tags="EconomicValue"/>
				<passive_effect name="DegradationMax" operation="base_set" value="10000"/>
			</effect_group>
		</item>

		<item name="vehicleBenzActrosplaceable">
			<property name="Extends" value="vehicleMinibikePlaceable"/>
			<property name="CustomIcon" value="CamionOnlyIcono" />
			<property name="Tags" value="vehicle,vengine,vfuel,vlight,canHaveCosmetic"/>
			<property name="Meshfile" value="#@modfolder:Resources/Camion.unity3d?ActrosOnly"/>
			<property name="EconomicValue" value="35000"/>
			<property class="Action1">
				<property name="Vehicle" value="vehicleBenzActros"/>
				<property name="VehicleSize" value="4.7, 4.8, 5"/>
			</property>
			<effect_group name="Base Effects">
				<passive_effect name="ModSlots" operation="base_set" value="4"/>
				<passive_effect name="ModPowerBonus" operation="base_add" value="300" tags="EconomicValue"/>
				<passive_effect name="DegradationMax" operation="base_set" value="10000"/>
			</effect_group>
		</item>

		
		
	</append>
</configs>